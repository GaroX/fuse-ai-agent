{
  "name": "fuse-ai-agent",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel build:watch offline",
    "build": "node esbuild.js",
    "build:watch": "node esbuild.js --watch",
    "offline": "nodemon --watch dist/index.js --exec 'serverless offline --stage dev'",
    "package": "npm run build && zip -j lambda.zip dist/index.js",
    "smee": "smee -u https://smee.io/fuse-linear --target http://localhost:3000/webhook"
  },
  "author": "Alvaro Betancourt Hurtado",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.2.1",
    "esbuild": "^0.25.8",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "serverless": "~3.40.0",
    "serverless-offline": "~12.0.4",
    "smee-client": "^4.3.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "@google/genai": "^1.13.0",
    "@linear/sdk": "^55.2.1",
    "@octokit/auth-app": "^8.0.2",
    "@octokit/rest": "^22.0.0"
  }
}
